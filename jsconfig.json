{
    "compilerOptions": {
        "lib": [
            "es2019",
            "dom"
        ],
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": false,
        "strictFunctionTypes": true,
        "types": [
            "packages/core/types/InstanceManagement.d.ts",
            "packages/core/types/RequestUtils.d.ts",
            "packages/core/types/Route.d.ts",
            "packages/core/types/Router.d.ts",
            "packages/core/types/Matchers.d.ts"
        ],
        "noEmit": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "packages/core/src/*.js",
        "packages/core/types/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}