{
    "compilerOptions": {
        "lib": [
            "es6",
            "dom"
        ],
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "emitDeclarationOnly": true,
        "noEmit": false,
        "strictNullChecks": false,
        "strictFunctionTypes": true,
        "types": ["packages/core/types/*.d.ts"],
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationDir": "./packages/core/types"
    },
    "include": [
        "packages/core/src/Route.js",
    ],
    "exclude": [
        "node_modules"
    ]
}
